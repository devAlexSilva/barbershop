generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String    @id @default(uuid())
  name    String
  Booking Booking[]
}

model Barbershop {
  id       String    @id @default(uuid()) // PK
  name     String
  address  String
  imageUrl String
  Service  Service[]
  Booking  Booking[]
}

model Service {
  id           String     @id @default(uuid())
  name         String
  price        Decimal    @db.Decimal(9, 2)
  barbershopId String // FK
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id]) //não é salvo no banco, apenas cria uma relação do barbershop com o service, armazenando a referência do id do model barbershop no campo barbershopId do service
  description  String
  Booking      Booking[]
  imageUrl     String
}

model Booking {
  id           String     @id @default(uuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  serviceId    String
  service      Service    @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  date         DateTime
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  //createdAt DateTime @default(now())
  //updatedAt DateTime @updatedAt
}

